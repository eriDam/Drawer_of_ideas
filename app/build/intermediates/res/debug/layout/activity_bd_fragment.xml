<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cipolat.slidenavigation.BdFragment"
    android:background="@drawable/bg_dpgris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@drawable/linearlayout_bg">

        <Button
            android:id="@+id/btn_insertar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_crear"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_add"
            android:padding="10dp"
            android:text="@string/insertar"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff6cc4ef"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_insertar"
            android:layout_alignStart="@+id/btn_insertar"
            android:layout_below="@+id/btn_eliminar"
            android:drawableLeft="@drawable/ic_buscar"
            android:padding="10dp"
            android:text="@string/buscar"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff6cc4ef"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_edit"
            android:padding="10dp"
            android:text="@string/editar"
            android:gravity="center"
            android:background="#ff6cc4ef"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_eliminar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_insertar"
            android:layout_alignRight="@+id/btn_insertar"
            android:layout_below="@+id/btn_insertar"
            android:drawableLeft="@drawable/ic_borrar"
            android:padding="10dp"
            android:text="@string/borrar"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff6cc4ef"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_salir"
            android:padding="10dp"
            android:text="@string/salir"
            android:gravity="center"
            android:background="#ff6cc4ef" />

        <TextView
            android:id="@+id/tv_text_changer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Nada pulsado"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:autoText="true"
            android:textColor="#fff9fbff"
            android:layout_marginBottom="20dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/im_sqlite_min">

        </FrameLayout>
    </LinearLayout>

</ScrollView>
