<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fff8fffd" />
            <stroke
                android:width="1dp"
                android:color="#fff8fffd" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff2f3f6"
                android:endColor="#ffecf4f6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#fff1f2f5" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
</selector>