<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffff9e87" />
            <stroke
                android:width="1dp"
                android:color="#ffff0c2c" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffff5568"
                android:endColor="#ffff6c56"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#fff4552e" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>