<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffafb5d1" />
            <stroke
                android:width="1dp"
                android:color="#ffa596d1" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffc1b1e0"
                android:endColor="#ff8c7cd1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff8c7cd1" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>