<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff88b5cc" />
            <stroke
                android:width="1dp"
                android:color="#ff6d8bbc" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff4676bc"
                android:endColor="#ff739abc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff0a1456" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
</selector>