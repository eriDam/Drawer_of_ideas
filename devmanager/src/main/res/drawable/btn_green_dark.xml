<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff4676bc" />
            <stroke
                android:width="1dp"
                android:color="#ff478d57" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff27972e"
                android:endColor="#ff3e6331"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff16561b" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
</selector>