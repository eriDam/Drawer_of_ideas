<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.erika_000.devmanager.DevTest"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/bg_dpgris">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/linearlayout_bg">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="617dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Repasa con el DevTest"
                    android:id="@+id/tv_titulo_test"
                    android:textColor="#ff6cc4ef"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="80dp" />

                <ImageView
                    android:layout_width="157dp"
                    android:layout_height="157dp"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="60dp"
                    android:src="@drawable/im_test" />

                <Button
                    android:id="@+id/btn_empezar"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:text="@string/empezar"
                    style="@style/ButtonText"
                    android:background="@drawable/button_pers"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
